<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.magee.project1_tempconverter.TempConverterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fahrenheit"
        android:id="@+id/fahrenheitLabelTextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/degreesTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/celcius"
        android:id="@+id/celciusLabelTextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/fahrenheitTextEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0_00"
        android:id="@+id/celsiusTextView"
        android:layout_alignTop="@+id/celciusLabelTextView"
        android:layout_toRightOf="@+id/fahrenheitLabelTextView"
        android:layout_toEndOf="@+id/fahrenheitLabelTextView"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textSize="18sp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/degrees"
        android:id="@+id/degreesTextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/celsiusTextView"
        android:layout_alignStart="@+id/celsiusTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/fahrenheitTextEdit"
        android:layout_alignTop="@+id/fahrenheitLabelTextView"
        android:layout_alignLeft="@+id/celsiusTextView"
        android:layout_alignStart="@+id/celsiusTextView"
        android:text="0.0" />


</RelativeLayout>
